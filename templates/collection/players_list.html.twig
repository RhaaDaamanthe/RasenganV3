{% extends 'base.html.twig' %}

{% block title %}Collection des joueurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <style>
        .modern-player-card {
            background: linear-gradient(145deg, #fff7ea, #ffddaa);
            border: none;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            text-decoration: none;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 25px 15px;
        }

        .modern-player-card:hover {
            transform: translateY(-12px) scale(1.05);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
        }

        .player-profile-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #ff9933;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.4s ease, border-color 0.3s;
        }
        
        .modern-player-card:hover .player-profile-img {
            transform: scale(1.1);
            border-color: #ff6600;
        }

        .card-content {
            padding: 15px 0 0;
            width: 100%;
            text-align: center;
        }

        .card-title {
            font-size: 1.6rem;
            margin: 10px 0 0;
            font-weight: 700;
            color: #420502;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
            text-transform: uppercase;
        }

        .catalogue {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 35px;
            justify-content: center;
            padding: 50px 0;
        }

        .global-stats {
            text-align: center;
            margin: 30px auto 50px;
        }

        .stats-card {
            display: inline-block;
            padding: 20px 40px;
            border-radius: 20px;
            background: linear-gradient(135deg, #ffd700, #ffb347);
            color: #b36322;
            font-family: "Poppins", sans-serif;
            box-shadow: 0 6px 20px rgba(0,0,0,0.25);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stats-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

        .stats-text {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 6px;
        }

        .stats-subtext {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .count {
            font-weight: 800;
            color: #420502;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        }
        @media (max-width: 768px) {
            .catalogue {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 20px;
            }
            .modern-player-card {
                padding: 15px;
            }
            .player-profile-img {
                width: 90px;
                height: 90px;
            }
            .card-title {
                font-size: 1.2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<main>
    <div class="content">

        <!-- üî• Zone des statistiques globales -->
        <section class="global-stats">
            <div class="stats-card">
                <p class="stats-text">
                    <span id="totalCount" class="count" data-value="{{ totalCards }}">0</span> cartes collect√©es
                </p>
                <p class="stats-subtext">
                    üçú <span id="animeCount" class="count" data-value="{{ animeCount }}">0</span>
                    &nbsp;üé¨ <span id="filmCount" class="count" data-value="{{ filmCount }}">0</span>
                </p>
            </div>
        </section>

        <div class="catalogue">
            {% for user in users %}
                <a href="{{ path('app_player_collection', {'id': user.id}) }}">
                    <div class="card special-card modern-player-card">
                        {% if user.imageCollection %}
                            <img src="{{ asset(user.imageCollection) }}" alt="{{ user.pseudo }}" class="player-profile-img">
                        {% else %}
                            <img src="{{ asset('images/default-profile.png') }}" alt="{{ user.pseudo }}" class="player-profile-img">
                        {% endif %}
                        <div class="card-content">
                            <h2 class="card-title">{{ user.pseudo }}</h2>
                            <p class="player-points">‚≠ê {{ user.totalPoints }} points</p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</main>


    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/collection.js') }}"></script>
    {% endblock %}
{% endblock %}