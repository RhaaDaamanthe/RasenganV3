{% extends 'base.html.twig' %}

{% block title %}Créer une carte d'animé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
{% endblock %}

{% block body %}
    <main class="admin-container">
        <div class="card-form-wrapper">
            <h1>Créer une nouvelle carte d'animé</h1>
            <p class="subtitle">Remplissez le formulaire ci-dessous pour ajouter une carte à votre collection.</p>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'form-upload'}}) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.rarity) }}
                    {{ form_widget(form.rarity, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.anime) }}
                    {{ form_widget(form.anime, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.imagePath) }}
                    {{ form_widget(form.imagePath, {'attr': {'class': 'form-control-file'}}) }}
                    <small class="form-text text-muted">Formats acceptés : JPG ou PNG. Taille max : 5MB.</small>
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                </div>
                <br>
                <button class="btn btn-primary" type="submit">{{ button_label|default('Créer') }}</button>
            {{ form_end(form) }}

            <a href="{{ path('app_card_anime_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
        </div>
    </main>
{% endblock %}