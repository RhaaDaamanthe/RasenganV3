{% extends 'base.html.twig' %}

{% block title %}Créer une carte de film{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
    <style>
        /* Styles pour les messages flash */
        .flash-message {
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 8px;
            font-weight: bold;
        }

        .flash-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .flash-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
{% endblock %}

{% block body %}
    <main class="admin-container">
        <div class="card-form-wrapper">
            <h1>Créer une nouvelle carte de film</h1>
            <p class="subtitle">Remplissez le formulaire ci-dessous pour ajouter une carte à votre collection.</p>
            <a href="{{ path('app_card_film_index') }}" class="btn btn-secondary top-action-link">Retour à la liste</a>
            {# Début du code ajouté pour les messages flash #}
            {% for message in app.flashes('success') %}
                <div class="flash-message flash-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="flash-message flash-error">
                    {{ message }}
                </div>
            {% endfor %}
            {# Fin du code ajouté #}

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'form-upload'}}) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.rarity) }}
                    {{ form_widget(form.rarity, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.film) }}
                    {{ form_widget(form.film, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.imagePath) }}
                    {{ form_widget(form.imagePath, {'attr': {'class': 'form-control-file'}}) }}
                    <small class="form-text text-muted">Formats acceptés : JPG ou PNG. Taille max : 5MB.</small>
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                </div>
                <br>
                <button class="btn btn-primary" type="submit">{{ button_label|default('Créer') }}</button>
            {{ form_end(form) }}

            <a href="{{ path('app_card_film_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
        </div>
    </main>
{% endblock %}