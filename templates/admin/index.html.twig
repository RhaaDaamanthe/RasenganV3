{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
{% endblock %}

{% block body %}
<main>
    <div class="admin-container">
        <!-- Hero Section -->
        <div class="dashboard-hero">
            <h1>🎯 Administration</h1>
            <p>Gérez votre collection de cartes comme un chef</p>
        </div>

        <!-- Grid moderne -->
        <div class="admin-grid">
            <!-- Section Cartes -->
            <div class="admin-section">
                <div class="section-header cards">
                    <h2>🎴 Gestion des cartes</h2>
                    <p>Créer, modifier ou supprimer des cartes d'animés et de films</p>
                </div>
                <div class="section-content">
                    <div class="admin-buttons">
                        <a href="{{ path('app_card_anime_index') }}" class="btn btn-primary">Gérer les cartes d'animé</a>
                        <a href="{{ path('app_card_film_index') }}" class="btn btn-primary">Gérer les cartes de film</a>
                    </div>
                </div>
            </div>

            <!-- Section Animés/Films -->
            <div class="admin-section">
                <div class="section-header media">
                    <h2>🎬 Gestion des médias</h2>
                    <p>Créer, modifier ou supprimer des animés et films pour les associer aux cartes</p>
                </div>
                <div class="section-content">
                    <div class="admin-buttons">
                        <a href="{{ path('app_anime_index') }}" class="btn btn-success">Gérer les animés</a>
                        <a href="{{ path('app_film_index') }}" class="btn btn-success">Gérer les films</a>
                    </div>
                </div>
            </div>

            <!-- Section Attribution -->
            <div class="admin-section">
                <div class="section-header assign">
                    <h2>👥 Attribution aux joueurs</h2>
                    <p>Ajouter des cartes existantes à l'inventaire des joueurs</p>
                </div>
                <div class="section-content">
                    <div class="admin-buttons">
                        <a href="#" class="btn btn-primary">Attribuer des cartes d'animés</a>
                        <a href="#" class="btn btn-primary">Attribuer des cartes de films</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}